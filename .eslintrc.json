{
  "env": {
    "browser": false,
    "node": true,
    "mocha": true
  },
  "extends": "airbnb",
  "plugins": [
    "standard",
    "promise"
  ],
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "one-var": "off",
    "prefer-destructuring": "warn",
    "indent": "off",
    "padded-blocks": "off",
    "no-plusplus": "off",
    "arrow-spacing": "off",
    "object-curly-spacing": "off",
    "prefer-const": "warn",
    "no-unused-vars": "warn",
    "object-shorthand": "warn",
    "no-param-reassign": "warn",
    "no-console": "warn",
    "no-multi-spaces": "off",
    "linebreak-style": [
      "error",
      "unix"
    ]
  }
}
